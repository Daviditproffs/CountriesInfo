@model CountriesInfo.Models.Country

@{
    Layout = "_Layout";
    ViewData["Title"] = Model.Name;
}

<h1>@Model.Name</h1>
<hr />

<div>
    <dl class="row" style="float:left">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Capital):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Capital)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Region):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Region)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Population):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Population)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Demonym):
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Demonym)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NativeName):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NativeName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Alpha3Code):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Alpha3Code)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CallingCode):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CallingCode)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AltSpellings):
        </dt>
        <dd class="col-sm-10">
            <ul>
                @for (int i = 0; i < Model.AltSpellings.Length; i++)
                {
                    <li> @Html.DisplayFor(model => model.AltSpellings[i])</li>

                }
            </ul>
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Currencies):
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var currency in Model.Currencies)
                {

                    <li>@currency.Name</li>

                }
            </ul>
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Languages):
        </dt>
        <dd class="col-sm-10">
            <ol>
                @foreach (var language in Model.Languages)
                {

                    <li>@language.Name </li>

                }
            </ol>
        </dd>

    </dl>

    <img src=" @Html.DisplayFor(model => model.Flag)" alt="Country flag" height="200" width="350" style="float:right; position:absolute; left:1000px" />
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Back to List</a>
</div>
